<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>
   
    <!-- Bootstarp CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <!-- Bootstarp Script -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
    <!-- Fontawesome script -->
    <script src="https://kit.fontawesome.com/07676bcedd.js" crossorigin="anonymous"></script>
    <!-- Google fonts -->
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');
    </style>

    <link rel="stylesheet" href="css/styles.css">
</head>

<body>
    <h1 class="mt-5 me-3 ms-3 rounded-5 border-2 ps-2 pe-2 pb-3">
        <%= Title %>
    </h1>

    <section id="testimonials" class="bg-coloured-section2">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="false">
            <div class="carousel-inner">

                <% for (var i = 0; i < Blogs.length; i++) { %>
                    <% let url = URLs[i] %>
                    
                    <% if (i === 0) { %>
                    <div class="carousel-item active" id="<%= url %>">
                        <h2><%= Blogs[i] %>
                        </h2>
                        <i class="fa-solid fa-play fa-sm me-1" style="color: #5bd6d6;"></i>
                        <em>Shekhar, 16th April 2023</em>
                    </div>
                    <% } else { %>
                        <div class="carousel-item" id="<%= url %>">
                            <h2><%= Blogs[i] %>
                            </h2>
                            <i class="fa-solid fa-play fa-sm me-1" style="color: #5bd6d6;"></i>
                            <em>Shekhar, 16th April 2023</em>
                        </div>
               <% } } %>
                
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </section>

    <script src="frontend_app.js" charset="UTF-8"></script>
</body>

</html>